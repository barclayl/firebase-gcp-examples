{
  "name": "api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "babel src/ --out-dir dist/ --source-maps --copy-files",
    "watch": "yarn build --watch",
    "preserve": "rimraf dist/ && yarn build",
    "serve": "yarn firebase serve --only functions:api",
    "predeploy": "rimraf dist/ && yarn build",
    "deploy": "yarn firebase deploy --only functions:api"
  },
  "dependencies": {
    "@gqlify/firestore": "^2.0.3",
    "@gqlify/server": "^2.0.3",
    "apollo-server-express": "^2.3.1",
    "express": "^4.16.4",
    "firebase-admin": "^6.5.0",
    "firebase-functions": "^2.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "firebase-tools": "^6.3.0",
    "rimraf": "^2.6.3"
  },
  "engines": {
    "node": "8"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.15.0"
          }
        }
      ]
    ]
  }
}
